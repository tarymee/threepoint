/* 分类 */
.cate {
    margin: 10px;
    overflow: hidden;
}

.cate-item {
    width: 25%;
    float: left;
    margin-bottom: 10px;
}

.cate-item image {
    width: 40px;
    height: 40px;
    overflow: hidden;
    display: block;
    margin: 0px auto;
}

.cate-item text {
    display: block;
    font-size: 12px;
    line-height: 20px;
    text-align: center;
    color: #333;
}